#!/bin/bash
#
ip address add 192.168.1.55/24 broadcast + dev eno1
ip link set eno1 up
ip route add 192.168.1.0/24 dev eno1
ip route add default via 192.168.1.1 dev eno1
echo "nameserver 192.168.10.53" >> /etc/resolv.conf
pacman -S python python-pip python-pipx git openssh

echo "add private key for git"
cp /home/larser/.ssh/id_rsa_laptop ~/.ssh/id_rsa
chown 0:0 ~/.ssh/id_rsa 
grub-mkconfig -o /boot/grub/grub.cfg
eval $(ssh-agent)
ssh-add ~/.ssh/id_rsa
echo "StrictHostKeyChecking=accept-new" >> ~/.ssh/config
git clone git@github.com:l-wegner/ansible-boot.git
